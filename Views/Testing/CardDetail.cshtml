@using NewZapures_V2.Models
@model List<Partial.Testing>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = ViewBag.data;
}

<div class="row">
    <div class="col-12">
        <div class="tab-content detail-list" id="pills-tabContent">
            <div class="tab-pane fade show active" id="general_detail">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            @{
                                foreach (var item in (List<Partial.Testing>)ViewBag.objdata)
                                {
                                    <div class="input-text col-lg-4">


                                        <div class="card dash-data-card text-center">
                                            <div class="card-body">
                                                <h6 class="font-8 text-dark">@item.CategoryName</h6>
                                                <div class="icon-info mb-4">
                                                    <i class="@item.ClassName"></i>
                                                </div>
                                                @{
                                                    foreach (var inneritem in Model.Where(p => p.CategoryId == item.CategoryId && p.ChargeType != "GST").ToList())
                                                    {
                                                        <span class="text-dark">@inneritem.ChargeType : @inneritem.Amount </span><br />

                                                    }
                                                }


                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                    </div><!-- end col-->
                                }
                            }
                        </div><!--end row-->

                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end general detail-->


        </div><!--end tab-content-->

    </div><!--end col-->
</div>