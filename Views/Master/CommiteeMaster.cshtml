<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">NOC</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
