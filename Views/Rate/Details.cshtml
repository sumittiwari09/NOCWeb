                    <table id="datatable-buttons" class="table table-striped " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th colspan="3" style="text-align: center; background: bisque;">Name</th>
                                <th colspan="4" style="text-align: center; background: gainsboro;">Charges</th>
                                <th colspan="3"></th>
                            </tr>
                            <tr>
                                <th>District</th>
                                <th>Department</th>
                                <th>Service</th>
                                <th>ChildService</th>
                                <th>Department</th>
                                <th>Emitra</th>
                                <th>Printing</th>
                                <th>Home</th>
                                <th>Collection</th>
                                <th>Active</th>
                                <th>Action</th>
                            </tr>
                        </thead>
