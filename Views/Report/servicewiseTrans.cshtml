
@using NewZapures_V2.Models
@model List<ServiceTransationBO>
@section styles{

    <link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
    <link href="~/plugins/animate/animate.css" rel="stylesheet" type="text/css">
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Service Wise Transacation Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserTypes = ViewBag.userTypesList as List<Dropdown>;
    var service = ViewBag.serviceDetailsList as List<Dropdown>;
    var serviceId = (string)ViewBag.fk_SrvTyp;
}
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Dashboard</li>
                    <li class="breadcrumb-item">Service Wise Transacation Report</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                @using (Html.BeginForm("ServiceWiseTrans", "Report", FormMethod.Post, new { @id = "form" }))
                {
                    <div class="card">
                        <div class="card-body">                                                  
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label for="example-text-input" class="col-sm-12" style="margin-left:-10px">Select User Type</label>
                                    @*<div>*@ 
                                        <select class="form-control singleselect" id="ddlCategoryId" name="fk_SrvTyp" required>
                                            <option hidden>Select Any Service</option>
                                            @{
                                                if (service != null)
                                                {
                                                    foreach (var item in service)
                                                    {
                                                        if (item.Id == @serviceId)
                                                        {
                                                            <option value="@item.Id" selected>@item.Text</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.Id">@item.Text</option>

                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    @*</div>*@
                                </div>
                                <div class="form-group col-lg-4">
                                    <button type="submit" class="btn btn-gradient-primary waves-effect waves-light" value="Search"
                                            name="btnSearch" id="btnSearch" style="margin-top: 25px; margin-left: 20px;">
                                        Search
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div><!--end card-body-->

                }

            </div><!--end card-body-->
            
            <div class="col-lg-12 table-responsive center">
                <div id="loadingDiv" style="display:none;position: absolute;width: 100%;height: 100vh;background: white;text-align: center;margin-left: -20px;z-index: 9;">
                    <div style="display:flex;place-content: center;flex-direction: column;justify-content: center;align-items: center;">
                        <img src="~/images/MobileOperators/loadernew.gif" width="380" height="380" />
                        <span class="fas fa-fade" style="    margin-top: -120px;    letter-spacing: 3px;"><span class="fas fa-beat">Processing...</span></span>
                    </div>
                </div>
                @*<div id="loadingDiv" style="display:none;position: absolute;width: 100%;height: 80%;background: white;text-align: center;margin-left: -20px;z-index: 9;">
            <img src="~/images/MobileOperators/loader.gif" width="45" height="45" />
        </div>*@
                <table class="table table-striped table-bordered dt-responsive word-wrap" id="datatable-buttons">
                    <thead>
                        <tr>
                            <th>SNo.</th>
                            <th scope="col">User Type</th>
                            <th scope="col">Party Name</th>
                            <th scope="col">Parent Name</th>
                            <th scope="col">Ref Id</th>
                            <th scope="col">Txn Id</th>
                            <th scope="col">Transaction Date</th>
                            <th scope="col">Service Provider</th>
                            <th scope="col">Operator Id</th>
                            <th scope="col">Transaction Amont</th>
                            <th scope="col">Commisson Amount</th>
                            <th scope="col">Sold Price</th>
                            <th scope="col">Mobile No</th>
                            <th scope="col">Card No</th>
                            <th scope="col">Latitude</th>
                            <th scope="col">Longitude</th>
                            <th scope="col">IP Address</th>
                            <th scope="col">Account Number</th>
                            <th scope="col">Bank Name</th>
                            <th scope="col">Branch Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            int sr = 0;
                            foreach (var item in Model)
                            {
                                sr = sr + 1;
                                <tr>
                                    <td>@sr</td>
                                    <td>@item.UserType</td>
                                    <td>@item.Partyname</td>
                                    <td>@item.ParentName</td>
                                    <td>@item.RefId</td>
                                    <td>@item.TxnId</td>
                                    <td>@item.TrnsDate</td>
                                    <td>@item.ServiceProvider</td>
                                    <td>@item.OperatorId</td>
                                    <td>@item.TransactionAmnt</td>
                                    <td>@item.CommissonAmnt</td>
                                    <td>@item.SoldPrice</td>
                                    <td>@item.MobileNo</td>
                                    <td>@item.CardNo</td>
                                    <td>@item.Latitude</td>
                                    <td>@item.Longitude</td>
                                    <td>@item.IPAddress</td>
                                    <td>@item.AccountNumber</td>
                                    <td>@item.BankName</td>
                                    <td>@item.BranchName</td>

                                    @*<td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Launch demo modal</button></td>*@
                                </tr>
                                i++;

                            }

                        }
                    </tbody>
                </table>

            </div>
        </div><!--end card-->
    </div> <!-- end col -->
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/datatablejs")*@
    <script src="~/plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.buttons.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/jszip.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/pdfmake.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/vfs_fonts.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.html5.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.print.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.colVis.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/responsive.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/scripts/pages/jquery.datatable.init.js" type="text/javascript"></script>
    <script src="~/Content/select2/js/select2.js"></script>
    <script type="text/javascript">


        //var dateAsString = '@DateTime.Now.ToString("yyyy-MM-dd")';
         $(document).ready(function () {
             $("#ddlusertypeId").select2();
             $('.singleselect').select2();
               // $('#FromDate').attr('max', dateAsString);
               // $('#ToDate').attr('max', dateAsString);
            });



        $(document).on("click", '#btnSearch', function (e) {
            e.preventDefault();
            debugger;
            $('#loadingDiv').css('display', 'block');

            $('#form').submit();
            return true;
        })

    </script>


}





