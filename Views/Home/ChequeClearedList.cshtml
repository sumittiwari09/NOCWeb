<script type="text/javascript">
    //import swal from 'sweetalert2';
    function OpenPopup(id) {
        var $buttonClicked = $('#btncollectmoney_' + id);
        var id = $buttonClicked.attr('data-id');
        var OrderId = $buttonClicked.attr('data-id2');
        var PayTrackingId = $buttonClicked.attr('data-id3');
        swal.fire({
            title: 'Are You Sure to unclear cheque ?',
            text: "",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            reverseButtons: true
        }).then(function (result) {
            if (result.value) {
                $.ajax({
                url: GetglobalDomain() + "/Home/ClearUnCheque",
                type: 'GET',
                    data: { PartyId: id, OrderId: OrderId, PayTrackingId: PayTrackingId},
                    success: function (result) {
                        if (result.failure == false) {
                            swal.fire(
                                'Success!',
                                'Successfully Uncleared !',
                                'success'
                            )
                            var url = GetglobalDomain() +'/Home/ChequeClearedList';
                            window.location.href = url;
                        }
                    //$('#modal-PaymentCollection').html(partialView);
                    //$('#modal-PaymentCollection').modal('show');
                }
            });
            } else if (
                // Read more about handling dismissals
                result.dismiss === Swal.DismissReason.cancel
            ) {
                swal.fire(
                    'Cancelled',
                    '',
                    'error'
                )
            }
        })
    }
</script>
