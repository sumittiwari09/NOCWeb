<script type="text/javascript">
    $(document).ready(function () {
        $('.singleselect').select2();
        $('[data-toggle="tooltip"]').tooltip()
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            responsiveClass: true,
            mouseDrag: false,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 2,
                    nav: true,
                    loop: false
                }
            }
        })

        $('input[type=checkbox]').click(function (e) {
            e.stopPropagation();
            return true;
        });

        $("#mobile").blur(function (e) {
            e.preventDefault();
            validateMobile();
            CheckUserMobile();
        });

        $("#email").blur(function (e) {
            e.preventDefault();
            var valu = $('#email').val();
            if (valu.length > 0) {

                var returnFromfun = isValidEmailAddress(valu);

                if (returnFromfun == false) {
                    var dic = '<div><h4><b>Email Address Not Valid</b></h4></div>';
                    sweetAlert(dic, 'center', 'warning', 0);
                    $('#email').val('');
                }
                else {
                    CheckUserEmailAddress();
                }
            }
        });

        $("#password").on("keypress", function (e) {
            if (e.which === 32)
                e.preventDefault();
        });

        $("#re-password").on("keypress", function (e) {
            if (e.which === 32)
                e.preventDefault();
        });

        $("#re-password").on("keypress", function (e) {
            if (e.which === 32)
                e.preventDefault();
        });

        $("#Resetuser_name").blur(function (e) {
            //console.log(e.which);
            e.preventDefault();
            validateUser(); // Checks if user exists or not
        });

        $("#pan").blur(function (e) {
            var inputvalues = $(this).val().toUpperCase();
            validatePanFormat(inputvalues);
        });

        $("#aadhar").blur(function (e) {
            if ($("#aadhar").val().length > 0) {
                if ($("#aadhar").val().length < 12) {
                    Swal.fire({
                        position: 'center',
                        icon: 'error',
                        title: '<h4><b>Aadhaar Number</b> Length Must be <b>12 Digits</b> long</h4>',
                        allowOutsideClick: false,
                        showCloseButton: true,
                        showConfirmButton: false,
                    });
                }
            }
        });

        $("#gst").blur(function (e) {
            var inputvalues = $(this).val().toUpperCase();
            validateGSTFormat(inputvalues)
        });

        $('#chkGSTApplicable').click(function () {
            var status = $("#chkGSTApplicable").is(':checked');
            if (status) {
                IsGSTApplicable = 1;
                $('#divGST').css('display', 'block');
            } else {
                IsGSTApplicable = 0
                $('#divGST').css('display', 'none');
            }
            //IsGSTApplicable
            //IsTDSApplicable
        });

        $('#chkTDSApplicable').click(function () {
            var status = $("#chkTDSApplicable").is(':checked');
            if (status) {
                IsTDSApplicable = 1;
            } else {
                IsTDSApplicable = 0
            }

        });
    });



</script>
