@using NewZapures_V2.Models
@model Serviceprovider
@{
    ViewBag.Title = "Service Provider";
    ViewBag.Create = "AddService Provider";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CustomMaster> ServiceType = new List<CustomMaster>();
    if (ViewBag.ServiceType != null)
    {
        ServiceType = (List<CustomMaster>)ViewBag.ServiceType;
    }

    List<CustomMaster> ServiceProvider = new List<CustomMaster>();
    if (ViewBag.ServiceProvide != null)
    {
        ServiceProvider = (List<CustomMaster>)ViewBag.ServiceProvide;
    }
}
