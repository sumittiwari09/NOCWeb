<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Master</li>
                    <li class="breadcrumb-item active">@ViewBag.Create</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ServiceProviderCreate", "Commission", FormMethod.Post, new { @class = "formcreateupdate", @id = "frmAddUpdate", enctype = "multipart/form-data" }))
        {
            <input name="ServiceProviderMasterId" id="ServiceProviderMasterId" type="hidden" value="@(Model != null ? Model.ServiceProviderMasterId.ToString() : "0")">

            <div class="card">
                <div class="card-header">
                    <h4 class="mt-0 header-title float-left">Service Provider Master</h4>
                    <a class="btn btn-gradient-secondary waves-effect waves-light float-right" href="@Url.Action("ServiceProviderIndex", "Commission")"><i class="fas fa-arrow-left"></i> Back to List</a>
                    @*<button onclick="location.href='@Url.Action("Create")';return false;" class="btn btn-gradient-primary float-right waves-effect waves-light"><i class="mdi mdi-plus-circle-outline mr-2"></i> @ViewBag.Create</button>*@
                </div>
                <div class="card-body">
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Provider Name</label>
                        @*<div class="col-sm-6">
                                <input name="ServiceProviderName" id="ServiceProviderName" type="text" value="@(Model != null ? Model.ServiceProviderName : "")" class="form-control" placeholder="Enter Service Provider Name" required>
                            </div>*@
                    <div class="col-sm-6">
                        <select class="singleselect" id="ServiceProviderId" name="ServiceProviderId" @(Model != null && Model.ServiceProviderId != 0 ? "disabled" : "")>
                            <option value="">Select Provider Name</option>
                            @{
                                foreach (var item in ServiceProvider)
                                {
                                    <option @(Model != null && Model.ServiceProviderId == item.Id ? "selected" : "") value="@item.Id">@item.text</option>
                                }
                            }
                        </select>
                        @*<input class="form-control col-sm-12" type="text" autocomplete="off" placeholder="Page Title" id="pageTitle" name="PageTitle">*@
                    </div>
                    </div>
                    <div class="form-group  is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Service Name</label>
                        <div class="col-sm-6">
                            <select class="singleselect" id="ServiceType" name="ServiceType">
                                <option value="">Select Service</option>
                                @{
                                    foreach (var item in ServiceType)
                                    {
                                        <option @(Model != null && Model.ServiceType == item.Id ? "selected" : "") value="@item.Id">@item.text</option>
                                    }
                                }
                            </select>
                            @*<input class="form-control col-sm-12" type="text" autocomplete="off" placeholder="Page Title" id="pageTitle" name="PageTitle">*@
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Validation Url</label>
                        <div class="col-sm-6">
                            <input name="ValidationUrl" id="ValidationUrl" type="text" value="@(Model != null ? Model.ValidationUrl : "")" class="form-control" placeholder="Enter Validation Url">
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Payment Url</label>
                        <div class="col-sm-6">
                            <input name="PaymentUrl" id="PaymentUrl" type="text" value="@(Model != null ? Model.PaymentUrl : "")" class="form-control" placeholder="Enter Payment Url">
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Check Url</label>
                        <div class="col-sm-6">
                            <input name="CheckUrl" id="CheckUrl" type="text" value="@(Model != null ? Model.CheckUrl : "")" class="form-control" placeholder="Enter Check Url">
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Priority</label>
                        <div class="col-sm-6">
                            <input name="priority" id="priority" type="number" value="@(Model != null ? Model.priority.ToString() : "")" class="form-control" placeholder="Enter priority">
                        </div>
                    </div>
                    <div class="form-group is-empty row">

                        <label for="nameInput" class="col-sm-4 control-label">IsWebActive</label>
                        <div class="col-sm-2 custom-control custom-switch switch-success">
                            <input type="checkbox" class="custom-control-input" id="IsWebActive" name="IsWebActive" value="@(Model != null? Model.IsWebActive.ToString() : "0")" @(Model != null && Model.IsWebActive == 1 ? "checked" : "")>
                            <label class="custom-control-label" for="IsWebActive"></label>
                        </div>
                    </div>
                    <div class="form-group is-empty row">

                        <label for="nameInput" class="col-sm-4 control-label">IsMobileActive</label>
                        <div class="col-sm-2 custom-control custom-switch switch-success">
                            <input type="checkbox" class="custom-control-input" id="IsMobileActive" name="IsMobileActive" value="@(Model != null? Model.IsMobileActive.ToString() : "0")" @(Model != null && Model.IsMobileActive == 1 ? "checked" : "")>
                            <label class="custom-control-label" for="IsMobileActive"></label>
                        </div>
                    </div>
                    <div class="form-group is-empty row">

                        <label for="nameInput" class="col-sm-4 control-label">Active</label>
                        <div class="col-sm-2 custom-control custom-switch switch-success">
                            <input type="checkbox" class="custom-control-input" id="Status" name="Status" value="@(Model != null? Model.Status.ToString() : "0")" @(Model != null && Model.Status == 1 ? "checked" : "")>
                            <label class="custom-control-label" for="Status"></label>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="form-footer">
                <div class="pull-right" style="text-align: end;">
                    <a href="@Url.Action("ServiceProviderIndex", "Commission")" class="btn btn-default">DISCARD</a>
                    <button class="btn btn-primary"> Save </button>
                </div>
            </footer>
        }

    </div>
</div>

