@using NewZapures_V2.Models
@model List<Partial.ApesSetCommission>
@{
    ViewBag.Title = "AEPS Commission Of Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Dropdown> listClient = new List<Dropdown>();
    listClient = (List<Dropdown>)ViewBag.clientlist;
    var Search_Name = "";
    if (!string.IsNullOrEmpty(ViewBag.DefaultParty))
    {
        var searchId = ViewBag.DefaultParty;
        Search_Name = listClient.FirstOrDefault(p => p.PartyId == searchId).Text;
    }
}
@section styles{
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .text-on-pannel {
            background: #fff none repeat scroll 0 0;
            height: auto;
            margin-left: 20px;
            padding: 3px 5px;
            position: absolute;
            margin-top: -47px;
            border: 1px solid #337ab7;
            border-radius: 8px;
        }

        .panel {
            /* for text on pannel */
            margin-top: 27px !important;
        }

        .panel-body {
            padding-top: 30px !important;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Commission Of Partner</li>

                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                <h4 class="mt-0 header-title float-left">@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Admin_setCommission_Show", "Commission", FormMethod.Post, new { @class = "formcreateupdate", @id = "frmAddUpdate", enctype = "multipart/form-data" }))
                {
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h3 class="text-on-pannel text-primary"><strong class="text-uppercase"> SEARCH BY NAME </strong></h3>
                            <div class="col-sm-6">
                                <select class="singleselect" id="DefaultParty" name="DefaultParty">
                                    <option value="">Select Client User</option>
                                    @{
                                        foreach (var item in listClient)
                                        {

                                            <option value="@item.PartyId">@item.Text @item.ID1</option>

                                        }
                                    }

                                </select>
                                @*<input class="form-control col-sm-12" type="text" autocomplete="off" placeholder="Page Title" id="pageTitle" name="PageTitle">*@
                            </div>
                            <button class=" btn btn-primary" type="submit"> Search </button>
                        </div>
                    </div>

                    
                }
                <form class="form-parsley" action="#" autocomplete="off">
                    @*<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">*@
                    <label for="nameInput" class="col-sm-3 control-label customlabel">@(string.IsNullOrEmpty(Search_Name)?"":"Search Name:-"+ Search_Name)</label>
                    <table id="datatable-buttons" class="table table-striped " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th colspan="7" style="
    text-align: center;
    font-size: large;
    background: chocolate;
    /* font-size: 184%; */
    font-weight: bold;
"> AEPS & MATM COMMISSION</th>
                            </tr>
                            <tr style="
    background: burlywood;
    font-size: initial;
">
                                <th>#No</th>
                                <th>Transaction From</th>
                                <th>Transaction To</th>
                                <th>Retailer</th>
                                <th>Distributer</th>
                                <th>Stockist</th>
                                <th>WhiteLabel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr style="
            background-color: cadetblue;
                                            font-size: initial;
                                        color: antiquewhite;
                                            ">
                                        @*<button type="button" class="btn btn-secondary btn-circle">
                                                <i class="fab fa-twitter"></i>
                                            </button>*@
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @item.TransactionAmountFrom
                                        </td>
                                        <td>
                                            @item.TransactionAmountTo
                                        </td>
                                        <td>
                                            @item.Retailer
                                        </td>
                                        <td>
                                            @item.Distributer
                                        </td>
                                        <td>
                                            @item.Stockist
                                        </td>
                                        <td>
                                            @item.Whitelabel
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(".singleselect").select2();
    </script>
}