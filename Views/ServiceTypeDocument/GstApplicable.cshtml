    <script type="text/javascript">
        $(".singleselect").select2();
        $(".type").click(function () {
            var id = $(this).data("id");
            $(".type").prop('checked', false);
            $("#" + id).prop('checked', true);
            if (id == 'HardwareId') {
                BindHardwarelist(2);
                $("#TypeId").val(2);
                $("#typedata").css('display', 'none');
                //var strHTML = "";
                //strHTML += "<option value=''>Select Charges Type</option>";
                $("#ChargeType").select2("destroy");
                $("#ChargeType").html('');
                $("#ChargeType").select2();
                $("#ChargeType").prop('required', false);

            }
            if (id == 'ServiceId') {
                BindHardwarelist(0);
                $("#TypeId").val(1);
                $("#typedata").css('display', 'block');
                $("#ChargeType").prop('required', true);

            }
        });
        $("#HardwareList").change(function () {
            var id = $("#TypeId").val();
            var serviceid = $(this).val();
            if (id == 1) {
                BindChargeslist(serviceid);
            }
        });
        function DeleteData(Id) {
            var Id = Id;

            /*  var TypeId = $(this).attr("name");*/
            $.confirm({

                title: 'Remove Confirmation',
                content: 'Are you sure to remove record',
                type: 'red',
                typeAnimated: true,
                animation: 'rotate',
                closeAnimation: 'scale',
                buttons: {
                    Confirm: {
                        text: 'YES',
                        btnClass: 'btn-red',
                        action: function () {



                            var Params = JSON.stringify({
                                TableId: 'GSTApplicable',
                                Id: Id,
                                type: 2


                            });
                            /* ShowBALoader("LoaderBASinup1");*/
                            $.ajax({
                                url: "@Url.Action("ChangeStatus", "Admin")" ,
                                type: 'POST',
                                dataType: "json",
                                data: Params,
                                contentType: "application/json",
                                success: function (response) {


                                    debugger;
                                    if (response.IsValid = 1) {
                                        Swal.fire({
                                            position: 'center',
                                            icon: 'success',
                                            title: 'Delete Successfully',
                                            showConfirmButton: false,
                                            timer: 3000
                                        })
                                        $("#tr_" + Id).remove();
                                    }

                                },

                            });

                        }
                    },
                    close: {
                        text: 'NO',
                        action: function () { }
                    }
                }
            });
        }
        $(".ChangeStatus").change(function () {

            var id = $(this).data("id");
            var item = id.split('-');
            var type = parseInt($(this).val());
            var trid = item[2];
            if (type == 0) {
                type = 1;
            }
            else {
                type = 0;
            }
            var Params = JSON.stringify(
                {
                    TableId: item[0],
                    type: item[1],
                    Id: item[2]
                });

            $.ajax({
                url: "@Url.Action("ChangeStatus", "Admin")"  ,
                type: 'POST',
                dataType: "json",
                contentType: "application/json",
                data: Params,
                success: function (response) {
                    debugger;
                    var dataid = $("#GSTApplicable_" + trid).is(':checked');
                    //alert(dataid);
                    if (response.isvalid == 1) {
                        if (dataid == false) {

                            $("#GSTApplicable_Delete_" + trid).css('display', 'block');
                        }
                        else {

                            $("#GSTApplicable_Delete_" + trid).css('display', 'none');
                        }
                    }

                    if (dataid) {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'GST Record Activated Successfully!',
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                    else {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'GST Record Deactivated Successfully!',
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                }
            });

        });
