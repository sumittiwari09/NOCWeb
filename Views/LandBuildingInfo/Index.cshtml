                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="example-text-input" class="col-sm-12" style="margin-left:-10px">Khasra No</label>
                            <div>
                                <input type="text" class="form-control" name="LandNo" id="txtKhasraNo" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                    <div class="card-header fsc">
                        <h4 class="header-title">If any Other Institute by the socity /trust/company</h4>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">

                            <label for="example-text-input" class="col-sm-12" style="margin-left:-10px"></label>                                                      
                            <div class="custom-control custom-radio col-sm-4">
                                <input class="form-group col-sm-2 custom-control-input custom-control-input-primary" type="radio" id="customRadioYes" value="yes" name="IsAnyOtherInfo">
                                <label for="customRadioYes" class="custom-control-label">YES</label>
                            </div>
                            <div class="custom-control custom-radio col-sm-4">
                                <input class="form-group col-sm-2 custom-control-input custom-control-input-danger" type="radio" id="customRadioNo" value="No" name="IsAnyOtherInfo">
                                <label for="customRadioNo" class="custom-control-label">No</label>
                            </div>

                        </div>
                        <div class="form-group col-lg-12">

                            <label for="example-text-input" class="col-sm-3" style="margin-left:-10px">If Yes Upload</label>
                            <div style="display:flex">
                                <input class="form-group col-sm-6" placeholder="Land Area" type="file" id="UploadFile" name="OwnBuildingProof"/>
                                <button class="btn col-sm-2 locationBTN" id="btnUpload"><i class="ti-upload"></i> Upload Doc</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-12" style="text-align:center">
                            <button type="submit" id="btnsubmitDetails" style="display:none"></button>
                            <button class="btn btn col-sm-2" type="button"  id="btnSave" style="color:white!important;background: #f953c6; background: -webkit-linear-gradient(to left, #b91d73, #f953c6); background: linear-gradient(to left, #b91d73, #f953c6);  "><i class="fa fa-plus"></i> Save</button>
                            <button class="btn btn col-sm-2" id="btnCapitalAdd" style="color:white!important;background: #f953c6; background: -webkit-linear-gradient(to left, #b91d73, #f953c6); background: linear-gradient(to left, #1d6cb9, #4f5fe0);">NEXT</button>
                            @*<button class="btn col-sm-2 btnNext" id="btnSaveNext">Next <i class="fas fa-arrow-right"></i></button>*@

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


</div>


