                                <input class="form-group col-sm-6" placeholder="Land Area" type="file" id="fupFile" name="LandAreaProof" />
                                @*<button class="btn col-sm-2 locationBTN" id="btnUpload"><i class="ti-upload"></i> Upload Doc</button>*@
                            </div>
                        </div>

                    </div>
                    <div class="card-header fsc">
                        <h4 class="header-title">Land Convert</h4>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label for="example-text-input" class="col-sm-12" style="margin-left:-10px"></label>
                      
                            <div class="custom-control custom-radio col-sm-4">
                                <input class="form-group col-sm-2 custom-control-input custom-control-input-primary" type="radio" name="IsLandConvert" id="IsLandConvertYes" value="yes">
                                <label for="IsLandConvertYes" class="custom-control-label">YES</label>
                            </div>
                            <div class="custom-control custom-radio col-sm-4">
                                <input class="form-group col-sm-2 custom-control-input custom-control-input-danger" type="radio" name="IsLandConvert" id="IsLandConvertNo" value="no">
                                <label for="IsLandConvertNo" class="custom-control-label">No</label>
                            </div>
                        </div>

                    </div>
                    <div class="row">                        
                        <div class="form-group col-lg-6">
