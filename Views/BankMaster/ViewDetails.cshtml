

@using NewZapures_V2.Models
@model List<BankMaster>
@{
    ViewBag.Title = "Bank Configuration";
    ViewBag.Create = "Add New Bank";

    //var notificationData = (List<NotificationData>)ViewBag.NotificationAllowed;
    // var TemplatesType = ViewBag.templatesTypeList as List<Dropdown>;
    // var templateId = (int)ViewBag.TemplateId;
    // var rowId = (string)ViewBag.rowId;
    //var htmlContent = (string)ViewBag.HTMLContent;
    //var pageTitle = (string)ViewBag.PageTitle;
}

@section styles{  @*@Styles.Render("~/bundles/datatable");*@
<link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
}
<style>
    .hideclass {
        display: none;
    }

    .showclass {
        display: block;
    }


    .specialuser {
        color: brown;
        background: bisque;
        text-align: center;
        border: 2px solid red;
        border-radius: 25px;
    }
</style>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Master</li>
                    <li class="breadcrumb-item active">@ViewBag.Create</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mt-0 header-title float-left">@ViewBag.Title</h4>
                <button onclick="location.href='@Url.Action("CreateDetails", "BankMaster")';return false;" class="btn btn-gradient-primary float-right waves-effect waves-light"><i class="fas fa-plus mr-2"></i>Add New</button>
            </div>
            <div class="card-body">
                <div class="card-body maindiv">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th hidden>ID</th>
                                    <th>Bank Name</th>
                                    <th>IFSC</th>
                                    <th>AccountNumber</th>
                                    <th>AccountHolderName</th>
                                    <th>MobileNumber</th>                                   
                                    <th style="width: 150px">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {                                       
                                        <tr>
                                            <td hidden>@item.ID</td>
                                            <td>@item.BankName</td>
                                            <td>@item.IFSC</td>
                                            <td>@item.AccountNumber</td>
                                            <td>@item.AccountHolderName</td>
                                            <td>@item.MobileNumber</td>                                         
                                            <td>
                                                <div class="form-check form-switch">
                                                    @{if (item.Status == 1)
                                                        {
                                                            <input id="BankMaster-@item.ID " class="form-check-input ChangeStatus" type="checkbox" data-id="BankMaster-@item.ID" name="@item.ID" value="@item.Status" checked>
                                                        }
                                                        else
                                                        {
                                                            <input id="BankMaster-@item.ID " class="form-check-input ChangeStatus" type="checkbox" data-id="BankMaster-@item.ID" name="@item.ID" value="@item.Status">

                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/datatablejs")*@
    <script src="~/plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.buttons.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/jszip.min.js" type="text/javascript"></script>
    @*<script src="~/plugins/datatables/pdfmake.min.js" type="text/javascript"></script>*@
    <script src="~/plugins/datatables/vfs_fonts.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.html5.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.print.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/buttons.colVis.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/plugins/datatables/responsive.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/scripts/pages/jquery.datatable.init.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <script src="~/Content/globalDomain.js"></script>
    <script type="text/javascript">
        $(".ChangeStatus").change(function () {
            var id = $(this).data("id");
            id = id.split('-')[1];
            var type = $(this).is(':checked'); //parseInt($(this).val());
            //alert(id);
            //alert(type);
            if (type) {
                type = 1;
            }
            else {
                type = 0;
            }

            var Params = JSON.stringify(
                {
                    rowID :id,
                    status: type
                });
            console.log(Params);

            $.ajax({
                url: GetglobalDomain() + "/BankMaster/ViewUpdate",
                type: 'POST',
                dataType: "json",
                contentType: "application/json",
                data: Params,
                success: function (response) {
                    console.log(response);

                    if (response.StatusCode == 1) {
                        var msg = 'Status Changes Successfully';
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: msg,
                            showConfirmButton: false,
                            timer: 30000
                        })
                        setTimeout(function () {
                            location.reload();
                        }, 3000);
                    }
                }
            });

        });

    </script>
}