<div class="row">
    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h4 class="mt-0 header-title float-left">Verification Mobile No</h4>
                <br /><span style="color: red; font-weight: 500; margin-left: -155px;">Customer/Remitter Verification Using OTP</span>
                @*<button onclick="location.href='@Url.Action("Create")';return false;" class="btn btn-gradient-primary float-right waves-effect waves-light"><i class="mdi mdi-plus-circle-outline mr-2"></i> @ViewBag.Create</button>*@
            </div>
            <div class="card-body">

                <div class="form-group is-empty row">
                    <label for="nameInput" class="col-sm-3 control-label">Mobile Number<span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input name="MobileNo" id="MobileNo" type="text" value="" class="form-control" placeholder="Enter Mobile No" required>
                    </div>
                </div>
                <div class="form-group is-empty row">
                    <label for="nameInput" class="col-sm-3 control-label">Name<span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input name="Name" id="Name" type="text" value="" class="form-control" placeholder="Enter Name" required>
                    </div>
                </div>
                <div class="form-group is-empty row">
                    <label for="nameInput" class="col-sm-3 control-label">PinCode<span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input name="PinCode" id="PinCode" type="text" value="" class="form-control" placeholder="Enter PinCode" required>
                    </div>
                </div>
                <div class="form-group is-empty row">
                    <label for="nameInput" class="col-sm-3 control-label">OTP<span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input name="OTP" id="OTP" type="text" value="" class="form-control" placeholder="Enter OTP" required>
                    </div>
                </div>
            </div>
        </div>
        <footer class="form-footer">
            <div class="pull-right" style="text-align: end;">
                @*<a href="@Url.Action("ServiceProviderIndex", "Commission")" class="btn btn-default">DISCARD</a>*@
             
                <button class="btn btn-primary "><i class="fa fa-check"></i> verify</button>
                <button class="btn btn-primary "><i class="fa fa-arrow-right"></i>Resend</button>
                <button class="btn btn-primary "><i class="fa fa-arrow-left"></i>Bank Money Transfer</button>
            </div>
        </footer>


    </div>
</div>