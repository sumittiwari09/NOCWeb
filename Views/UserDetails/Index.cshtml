                icon: 'error',
                title: 'Please Select Any Reason',
                allowOutsideClick: false,
                showCloseButton: true,
            })

        }
        else {
            updateUser(status, partyId, email, user);
        }
    }

    function updateUser(status, partyId, email, username) {

