        console.log(JSON.stringify(UpdateUserDetailsModel));
        $.ajax({
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            url: GetglobalDomain() + "/UserDetails/UpdateUser",
