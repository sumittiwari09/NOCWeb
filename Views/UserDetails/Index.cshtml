            type: 'Post',
            cache: false,
            data: JSON.stringify(UpdateUserDetailsModel),
            success: function (data) {
                console.log('ajax');
                console.log(data);

                if (data.StatusCode == 1) {
                    //var dic = '<div><h4>' + data.Data.Message + '</h4></div>';
