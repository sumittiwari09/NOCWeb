@using NewZapures_V2.Models
@model List<MyPayment>
@{

    Layout = null;
}
@section styles {
    <link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}


<div class="row col-lg-12 col-md-12 col-sm-12" id="divCardView" style="transition:all 3s linear">

    @foreach (var item in Model)
    {
        <div class='col-lg-6 col-sm-12 col-md-12'>
            <div class='card shdow'>
                <div class='card-body'>
                    <div class='card-header text-center heder'>Transection Date : @item.OrderDate </div>
                    <hr style='margin-top:0 !important' />
                    <div class='row'>

                        <table class='table table-borderless' style='margin-left: 5px;'>
                            <tbody>
                                <tr><td class='tblrow' style="width: 168px;">Order No</td> <td>:</td><td class='tblitemrow'>@item.OrderNo</td></tr>
                                <tr><td class='tblrow' style="width: 168px;">Items</td> <td>:</td><td class='tblitemrow'>@item.item</td></tr>
                                <tr><td class='tblrow' style="width: 168px;">Transection Amount</td> <td>:</td><td class='tblitemrow'>@item.TransectionAmount INR</td></tr>
                                <tr><td class='tblrow' style="width: 168px;">Balance Amount</td> <td>:</td><td class='tblitemrow'>@item.BalanceAmount INR</td></tr>
                                <tr><td class='tblrow' style="width: 168px;">Payment Mode</td> <td>:</td><td class='tblitemrow'>@item.PaymentMode</td></tr>
                                <tr>
                                    <td class='tblrow'>Payment Status</td>
                                    <td>:</td>
                                    <td class='tblitemrow'>
                                        <span data-toggle='tooltip' data-placement='top' title='@item.PaymentStatus' style='color:@(Model!=null && item.PaymentStatus=="Done"?"green":"Red")'> @item.PaymentStatus <i class='fa fa-1x fa-info-circle'></i></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>




<div class="row col-12" id="divListView" style="display:none; transition:all 3s linear">
    <div class="card" style="width: 100%; margin-left: 15px;">

        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Transaction Date</th>
                    <th scope="col">Order No</th>
                    <th scope="col">Items</th>
                    <th scope="col">Transaction AMT</th>
                    <th scope="col">Balance AMT</th>
                    <th scope="col">Payment Mode</th>
                    <th scope="col">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.OrderDate</td>
                        <td>@item.OrderNo</td>
                        <td>@item.item</td>
                        <td>@item.TransectionAmount INR</td>
                        <td>@item.BalanceAmount INR</td>
                        <td>@item.PaymentMode</td>
                        <td> <span data-toggle='tooltip' data-placement='top' title='@item.PaymentStatus' style='color:@(Model!=null && item.PaymentStatus=="Done"?"green":"Red")'> @item.PaymentStatus <i class='fa fa-1x fa-info-circle'></i></span></td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

@section scripts {
    <!-- Required datatable js -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="~/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables/jszip.min.js"></script>
    <script src="~/plugins/datatables/pdfmake.min.js"></script>
    <script src="~/plugins/datatables/vfs_fonts.js"></script>
    <script src="~/plugins/datatables/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables/buttons.print.min.js"></script>
    <script src="~/plugins/datatables/buttons.colVis.min.js"></script>
    <!-- Responsive examples -->
    <script src="~/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/scripts/pages/jquery.datatable.init.js"></script>
}


<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });

</script>

