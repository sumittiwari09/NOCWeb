@using NewZapures_V2.Models
@model SubMenuMaster
@{
    ViewBag.Title = "Sub Menu Master";
    ViewBag.Create = "Add New SubMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ShowMenuDropDown> Menulist = new List<ShowMenuDropDown>();
    if (ViewBag.Menulist != null)
    {
        Menulist = (List<ShowMenuDropDown>)ViewBag.Menulist;
    }

    }

  @section styles{
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Master</li>
                    <li class="breadcrumb-item active">@ViewBag.Create</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("SubMenuCreate", "Role", FormMethod.Post, new { @class = "formcreateupdate", @id = "frmAddUpdate", enctype = "multipart/form-data" }))
        {
            <input name="SubMenuId" id="SubMenuId" type="hidden" value="@(Model != null ? Model.SubMenuId.ToString() : "0")">

            <div class="card">
                <div class="card-header">
                    <h4 class="mt-0 header-title float-left">Sub Menu Master</h4>
                    <a class="btn btn-gradient-secondary waves-effect waves-light float-right" href="@Url.Action("SubMenuIndex", "Role")"><i class="fas fa-arrow-left"></i> Back to List</a>
                    @*<button onclick="location.href='@Url.Action("Create")';return false;" class="btn btn-gradient-primary float-right waves-effect waves-light"><i class="mdi mdi-plus-circle-outline mr-2"></i> @ViewBag.Create</button>*@
                </div>
                <div class="card-body">
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Menu Name</label>
                        <div class="col-sm-6">
                            <select class="singleselect" name="MenuId" id="MenuId" required>

                                <option value="">Select Menu Name</option>
                                @{
                                    foreach (var item in Menulist)
                                    {
                                        <option @(Model!=null && Model.MenuId==item.MenuId?"selected":"") value="@item.MenuId">@item.MenuName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
               
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">SubMenu Name</label>
                        <div class="col-sm-6">
                            <input name="SubMenuName" id="SubMenuName" type="text" value="@(Model != null ? Model.SubMenuName : "")" class="form-control" placeholder="Enter Menu Name" required>
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Controller Name</label>
                        <div class="col-sm-6">
                            <input name="ControllerName" id="ControllerName" type="text" value="@(Model != null ? Model.ControllerName : "")" class="form-control" placeholder="Enter Controller Name" required>
                        </div>
                    </div>
                    <div class="form-group is-empty row">
                        <label for="nameInput" class="col-sm-3 control-label">Action Name</label>
                        <div class="col-sm-6">
                            <input name="ActionMethod" id="ActionMethod" type="text" value="@(Model != null ? Model.ActionMethod : "")" class="form-control" placeholder="Enter Action Name" required>
                        </div>
                    </div>
                    <div class="form-group is-empty row">

                        <label for="nameInput" class="col-sm-4 control-label">Active</label>
                        <div class="col-sm-2 custom-control custom-switch switch-success">
                            <input type="checkbox" class="custom-control-input" id="Status" name="Status" value="@(Model != null? Model.Status.ToString() : "0")" @(Model != null && Model.Status == 1 ? "checked" : "")>
                            <label class="custom-control-label" for="Status"></label>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="form-footer">
                <div class="pull-right" style="text-align: end;">
                    <a href="@Url.Action("SubMenuIndex", "Role")" class="btn btn-default">DISCARD</a>
                    <button class="btn btn-primary"> Save </button>
                </div>
            </footer>
        }
    </div>
</div>
