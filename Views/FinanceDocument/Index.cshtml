    <script src="~/Content/jquery/jquery.js"></script>
    <script src="~/Content/globalDomain.js"></script>

    <script src="~/scripts/pages/jquery.forms-advanced.js"></script>
    <script src="~/plugins/dropify/js/dropify.min.js"></script>
    <script src="~/scripts/pages/jquery.form-upload.init.js"></script>
    }
<script type="text/javascript">


$(document).ready(function () {
        var isuserExists = '@TempData["isSaved"]'
        var message = '@TempData["msg"]'
        if (isuserExists == 1 && message.length> 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: message,
                    allowOutsideClick: false,
                    showCloseButton: true,
                    showConfirmButton: false,

                });
        }
        if (isuserExists == 0 && message.length> 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: message,
                    allowOutsideClick: false,
                    showCloseButton: true,
                    showConfirmButton: false,
                });
        }

    $('input:radio[name=IsConcerned]').click(function () {
        var checkval = $('input:radio[name=IsConcerned]:checked').val();
        if (checkval == '1') {
            $('#IsConcernedfupFile').removeAttr('disabled');
            $('#btnUploadIsConcerned').removeAttr('disabled');
        }
        else {
            $('#IsConcernedfupFile').attr('disabled', 'disabled');
            $('#btnUploadIsConcerned').attr('disabled', 'disabled');
        }
    });

    $('input:radio[name=IsFrame]').click(function () {
        var checkval = $('input:radio[name=IsFrame]:checked').val();
        if (checkval == '1') {
            $('#IsFramefupFile').removeAttr('disabled');
            $('#IsFramebtnUpload').removeAttr('disabled');
        }
        else {
            $('#IsFramefupFile').attr('disabled', 'disabled');
            $('#IsFramebtnUpload').attr('disabled', 'disabled');
        }
    });

    $('input:radio[name=IsAdmission]').click(function () {
        var checkval = $('input:radio[name=IsAdmission]:checked').val();
        if (checkval == '1') {
            $('#IsAdmissionfupFile').removeAttr('disabled');
            $('#IsAdmissionbtnUpload').removeAttr('disabled');
        }
        else {
            $('#IsAdmissionfupFile').attr('disabled', 'disabled');
            $('#IsAdmissionbtnUpload').attr('disabled', 'disabled');
        }
    });

    $('input:radio[name=IsSufficient]').click(function () {
        var checkval = $('input:radio[name=IsSufficient]:checked').val();
        if (checkval == '1') {
            $('#IsSufficientfupFile').removeAttr('disabled');
            $('#IsSufficientbtnUpload').removeAttr('disabled');
        }
        else {
            $('#IsSufficientfupFile').attr('disabled', 'disabled');
            $('#IsSufficientbtnUpload').attr('disabled', 'disabled');
        }
    });

    $('input:radio[name=IsAffidavit]').click(function () {
        var checkval = $('input:radio[name=IsAffidavit]:checked').val();
        if (checkval == '1') {
            $('#IsAffidavitfupFile').removeAttr('disabled');
            $('#IsAffidavitbtnUpload').removeAttr('disabled');
        }
        else {
            $('#IsAffidavitfupFile').attr('disabled', 'disabled');
            $('#IsAffidavitbtnUpload').attr('disabled', 'disabled');
        }
    });

    $('input:radio[name=IsOther]').click(function () {
        var checkval = $('input:radio[name=IsOther]:checked').val();
        if (checkval == '1') {
            $('#IsOtherfupFile').removeAttr('disabled');
            $('#IsOtherbtnUpload').removeAttr('disabled');
        }
        else {
            $('#IsOtherfupFile').attr('disabled', 'disabled');
            $('#IsOtherbtnUpload').attr('disabled', 'disabled');
        }
    });
});
</script>