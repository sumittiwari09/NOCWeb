                                <input  type="radio" name="IsAdmission" id="IsAdmissionNo" value="0">
                                <label for="IsAdmissionNo">No</label>
                            </div>
                        </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <div style="display: flex; margin-top: -16px">
                            <input class="form-control col-sm-8" type="file" id="IsAdmissionfupFile" name="Admission" data-input="true" class="form-control filestyle">
                            <label class="btn btn-sm col-sm-4 locationBTN" id="IsAdmissionbtnUpload"> Upload Docs</label>
                        </div>
                    </div>
                </div>

