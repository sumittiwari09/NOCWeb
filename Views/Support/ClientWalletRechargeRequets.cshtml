@model NewZapures_V2.Models.WalletRechargeHistory
@{
    ViewBag.Title = "Wallet Refill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IEnumerable<NewZapures_V2.Models.ClientWalletRechage> Ven = ViewData["ClientRechargeRequest"] as IEnumerable<NewZapures_V2.Models.ClientWalletRechage>;
}
@section styles{-->  @*@Styles.Render("~/bundles/datatable");*@
