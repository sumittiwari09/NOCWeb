                <button class="btn" id="btnCapitalAdd" style="color:white!important;background: #f953c6; /* fallback for old browsers */ background: -webkit-linear-gradient(to left, #b91d73, #f953c6); /* Chrome 10-25, Safari 5.1-6 */ background: linear-gradient(to left, #b91d73, #f953c6); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */ "><i class="fa fa-plus"></i> ADD</button>
            </div>*@
                </div>

                <div class="row">
                    <div class="form-group col-lg-12">
                        <table class="table table-borderless table-striped table-hover" id="tblCapital">
                            <thead class="dark">
                                <tr>
                                    <th>#</th>
                                    <th>Department</th>
                                    <th>NOC Type</th>
                                    <th>Fee Type</th>
                                    <th>For Boys</th>
                                    <th>For Girls</th>
                                    <th>For Co-Education</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="8" style="text-align: center;">No Data Available</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


                <div class="row text-center">
                    <div class="form-group col-lg-12">
                        <button class="btn col-sm-2 btnPrev" id="btnPrev"><i class="fas fa-arrow-left"></i> Previous</button>
                        <button class="btn col-sm-2 btnNext" id="btnSaveNext">Next <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/jquery/jquery.js"></script>
<script src="~/Content/select2/js/select2.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.all.min.js"></script>
<script src="~/Content/globalDomain.js"></script>
<script type="text/javascript">
    var isAdmin = 1;
    $(document).ready(function () {
        $(".singleselect").select2();
    });

    $('#btnSaveNext').click(function () {
        var status = validation();
        console.log(status);

        if (status) {
            var vertinaryName = $('#txtvertinaryName').val();
            var distance = $('#txtDistance').val();
            var authPerson = $('#txtAuthPerson').val();
            var mobile = $('#txtMobileNo').val();
            var location = $('#txtLocation').val();
            var email = $('#txtEmail').val();
            var isBoard = ($("input[name=customRadio]").val() == "yes") ? 1 : 0;
            var adminName = $('#txtAdminName').val();
            var designation = $('#ddldesignation').val();
            var relation = $('#txtRelation').val();
            var remark = $('#txtRemark').val();

            var VertinaryModal = {
                "sNameOfVtnry": vertinaryName,
                "dDistance": parseFloat(distance),
                "sPersnNm": authPerson,
                "sMobileNO": mobile,
                "sLocation": location,
                "sEmailId": email,
                "IsOnBoard": parseInt(isadmin),
                "sNameOfAdmin": adminName,
                "iFk_DesgntnId": parseInt(designation),
                "sRelWithInst": relation,
                "sRemark": remark
            }

            var d = JSON.stringify(VertinaryModal);
            console.log(d);
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                url: GetglobalDomain() + "/Vertinary/SaveDetails",
                dataType: 'json',
                type: 'Post',
                cache: false,
                data: JSON.stringify(VertinaryModal),
                success: function (data) {
                    console.log('ajax');
                    console.log(data);

                    if (data.StatusCode == 1) {

                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Success...!',
                            html: `${data.Message}`,
                            allowOutsideClick: false,
                            showCloseButton: true,
                            showConfirmButton: false,
                        })
                    }

                    setTimeout(function () {
                        window.location.href = '@Url.Action("Index", "Vertinary")';
                    }, 2500);

                },
                error: function (d) {
                    console.log(d);
                }
            });
        }
    });

    $('input[name=customRadio]').change(function () {
        var isadmin = $(this).val();

        if (isadmin == 'yes') {
            $('#divAdminBlock').css('display', 'block');
            isAdmin = 1;
        }
        else {
            $('#divAdminBlock').css('display', 'none');
            isAdmin=0
        }
    })

    function validation() {
        var status = true;

        var vertinaryName = $('#txtvertinaryName').val();
        var distance = $('#txtDistance').val();
        var authPerson = $('#txtAuthPerson').val();
        var mobile = $('#txtMobileNo').val();
        var location = $('#txtLocation').val();
        var email = $('#txtEmail').val();
        var isBoard = parseInt(isAdmin);
        var adminName = $('#txtAdminName').val();
        var designation = $('#ddldesignation').val();
        var relation = $('#txtRelation').val();
        var remark = $('#txtRemark').val();

        if (vertinaryName.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter vertinary name...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (distance.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter distance...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (authPerson.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter the authorize person name...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (mobile.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter mobile number...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (location.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter location...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (email.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter email address...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }

        else if (isBoard == 1)
        {

        if (adminName.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter admin name...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (designation == 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please select any designation...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        else if (relation.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter relation...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }

        }


        else if (remark.length <= 0) {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Error...!',
                html: 'Please enter remark...!',
                allowOutsideClick: false,
                showCloseButton: true,
                showConfirmButton: false,
            })
            status = false;
        }
        return status;


    }

    function numberOnly(id) {
        // Get element by id which passed as parameter within HTML element event
        var element = document.getElementById(id);
        // This removes any other character but numbers as entered by user
        element.value = element.value.replace(/[^0-9]/gi, "");
    }

    $('#pinMyLocation').click(function () {

        getLocation();


    });


    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);

        } else {
            alert("Geolocation is not supported by this browser.");
        }
    }

    function showPosition(position) {
       //alert("Latitude: " + position.coords.latitude + "<br>Longitude: " + position.coords.longitude)
        var data = {
            lat:position.coords.latitude,
            long:position.coords.longitude
        }

        console.log(JSON.stringify(data));

        $('#txtLocation').val(data.lat + '-' + data.long);
        $('#txtLocation').attr('readonly', true);

        //$('#hdf_longitudeData').val(position.coords.longitude)
