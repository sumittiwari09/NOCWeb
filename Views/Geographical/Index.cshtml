@using NewZapures_V2.Models
@{
    ViewBag.Title = "Geographical Master";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var AddTypes = ViewBag.AddTypes as List<Dropdown>;
    var AllData = ViewBag.AllData as List<GeographicalTableData>;
}
<link href="~/Content/select2/css/select2.css" rel="stylesheet" />

<style>
    .sticky {
        position: sticky;
        top: 0;
        z-index: 1;
    }
</style>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Master</li>
                    <li class="breadcrumb-item active">Geopraphical</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group col-lg-3">
                            <label for="example-text-input" class="col-sm-8" style="margin-left:-10px">Select</label>

                            <select id="Addtype">
                                <option value="0" role=separator>Select Add Type</option>
                                @{
                                    if (AddTypes != null)
                                    {
                                        foreach (var item in AddTypes)
                                        {
                                            <option value=@item.Text data-image="~/images/404.png">@item.Text</option>



                                        }
                                    }
                                }
                            </select>

                        </div>
                        <hr />
                    </div>
                </div>

                <div id="divDetailsCountry" class="row" style="display:none">
                    <div class="col-12 d-flex">
                        <div class="col-lg-3">
                            <label for="txtcountryName" class="form-label">Select Country</label>
                            <input class="form-control" type="text" id="txtcountryName" placeholder="Enter Country Name" autocomplete="off" required>
                        </div>

                        <div class="col-lg-3 mt-2">
                            <div>&nbsp;</div>
                            <input type="button" class="btn btn-primary" id="btnSaveCountry" onclick="SaveData('Country');" value="Add" title="Add" />
                        </div>
                    </div>
                </div>

                <div id="divDetailsState" class="row" style="display:none">
                    <div class="col-12  d-flex">
                        <div class="col-lg-2">
                            <label for="ddlCountryState" class="form-label">Select Country</label>
                            <div id="CountryBindingDivforState">
                                <select class="form-control col-sm-12" id="ddlCountryState">
                                    <option value="0" role=separator>Select Country</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="txtStateName" class="form-label">Enter State Name</label>
                            <input class="form-control" type="text" id="txtStateName" placeholder="Enter State Name" autocomplete="off">
                        </div>

                        <div class="col-lg-1 mt-2">
                            <div>&nbsp;</div>
                            <input type="button" class="btn btn-primary" id="btnSaveState" onclick="SaveData('State');" value="Add" title="Add" />
                        </div>
                    </div>

                </div>

                <div id="divDetailsDistrict" class="row col-12" style="display:none">
                    <div class="col-12  d-flex">
                        <div class="col-lg-2">
                            <label for="ddlcountryDistrict" class="form-label">Select Country</label>
                            <div id="CountryBindingDivforDistrict">
                                <select class="form-control col-sm-12" id="ddlcountryDistrict">
                                    <option value="0" role=separator>Select Country</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="ddlStatesDistrict" class="form-label">Select State</label>
                            <div id="StateBindingDivforDistrict">
                                <select class="form-control col-sm-12" id="ddlStatesDistrict">
                                    <option value="0" role=separator>Select State</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="txtDistrictName" class="form-label">Enter District Name</label>
                            <input class="form-control" type="text" id="txtDistrictName" placeholder="Enter District Name" autocomplete="off">
                        </div>
                        <div class="col-lg-2">
                            <label for="txtDistrictPinCode" class="form-label">Enter District Pincode</label>
                            <input class="form-control" type="text" id="txtDistrictPinCode" oninput="numberOnly(this.id);"
                                   maxlength="6" placeholder="Enter District Pincode" autocomplete="off">
                        </div>

                        <div class="col-lg-1 mt-2">
                            <div>&nbsp;</div>
                            <input type="button" class="btn btn-primary" id="btnSaveDistrict" onclick="SaveData('District');" value="Add" title="Add" />
                        </div>
                    </div>
                </div>

                <div id="divDetailsCity" class="row" style="display:none">
                    <div class="col-12  d-flex">
                        <div class="col-lg-2">
                            <label for="ddlcountryCity" class="form-label">Select Country</label>
                            <div id="CountryBindingDivforCity">
                                <select class="form-control col-sm-12" id="ddlcountryCity">
                                    <option value="0" role=separator>Select Country</option>

                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="ddlStatesCity" class="form-label">Select State</label>
                            <div id="StateBindingDivforCity">
                                <select class="form-control col-sm-12" id="ddlStatesCity">
                                    <option value="0" role=separator>Select State</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="ddlDistrictCity" class="form-label">Select Disitrict</label>
                            <div id="DistrictBindingDivforCity">
                                <select class="form-control col-sm-12" id="ddlDistrictCity">
                                    <option value="0" role=separator>Select Distirct</option>

                                </select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <label for="txtCityName" class="form-label">Enter City Name</label>
                            <input class="form-control" type="text" id="txtCityName" placeholder="Enter City Name" autocomplete="off">
                        </div>
                        <div class="col-lg-2">
                            <label for="txtCityPincode" class="form-label">Enter City Pincode</label>
                            <input class="form-control" type="text" id="txtCityPincode" oninput="numberOnly(this.id);"
                                   maxlength="6" placeholder="Enter City Pincode" autocomplete="off">
                        </div>

                        <div class="col-lg-1 mt-2">
                            <div>&nbsp;</div>
                            <input type="button" class="btn btn-primary" id="btnSaveCity" onclick="SaveData('City');" value="Add" title="Add" />
                        </div>
                    </div>
                </div>

                <div id="divDetailsArea" class="row" style="display:none">

                    <div class="row  col-12">
                        <div class="col-lg-4">
                            <label for="ddlcountryArea" class="form-label">Select Country</label>
                            <div id="CountryBindingDivforArea">
                                <select class="form-control col-sm-12" id="ddlcountryArea">
                                    <option value="0" role=separator>Select Country</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <label for="ddlStatesArea" class="form-label">Select State</label>
                            <div id="StateBindingDivforArea">
                                <select class="form-control col-sm-12" id="ddlStatesArea">
                                    <option value="0" role=separator>Select State</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <label for="ddlDistrictArea" class="form-label">Select Disitrict</label>
                            <div id="DistrictBindingDivforArea">
                                <select class="form-control col-sm-12" id="ddlDistrictArea">
                                    <option value="0" role=separator>Select Distirct</option>
                                </select>
                            </div>
                        </div>

                    </div>

                    <div class="row col-12 mt-4">

                        <div class="col-lg-4">
                            <label for="ddlCityArea" class="form-label">Select City</label>
                            <div id="CityBindingDivforArea">
                                <select class="form-control col-sm-12" id="ddlCityArea">
                                    <option value="0" role=separator>Select City</option>

                                </select>
                            </div>
                        </div>


                        <div class="col-lg-4">
                            <label for="txtAreaName" class="form-label">Enter Area Name</label>
                            <input class="form-control" type="text" id="txtAreaName" placeholder="Enter Area Name" autocomplete="off">
                        </div>

                        <div class="col-lg-3">
                            <label for="txtPincode" class="form-label">Enter Pincode</label>
                            <input class="form-control" type="text" id="txtPincode" oninput="numberOnly(this.id);"
                                   maxlength="6" placeholder="Enter Pincode" autocomplete="off">
                        </div>

                        <div class="col-lg-1 mt-2">
                            <div>&nbsp;</div>
                            <input type="button" class="btn btn-primary" id="btnSaveArea" onclick="SaveData('Area');" value="Add" title="Add" />
                        </div>
                    </div>

                </div>

                <hr id="separatorTable" style="display:none" />
                <div id="divGeoGraphicalList" class="row" style="max-height:60vh; overflow-y:scroll">
                    <div class="col-12 d-flex">

                        <table id="datatable-buttons" class="table table-striped table-bordered" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead class="sticky">
                                <tr>
                                    <th scope="col" hidden>CountryID</th>
                                    <th scope="col" hidden>StateID</th>
                                    <th scope="col" hidden>DistrictID</th>
                                    <th scope="col" hidden>CityID</th>
                                    <th scope="col" hidden>AreaID</th>
                                    <th scope="col">Country</th>
                                    <th scope="col">State</th>
                                    <th scope="col">District</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Area</th>
                                    <th scope="col">Pincode</th>
                                    <th scope="col" hidden>Entry Type</th>
                                    <th scope="col" hidden>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                                    if (AllData != null)
                                    {
                                        if (AllData.Count <= 0)
                                        {
                                            <tr>
                                                <td colspan="6" rowspan="1" style="text-align:center">No Data Available</td>
                                            </tr>
                                        }
                                        else
                                        {

                                            foreach (var item in AllData)
                                            {
                                                <tr>
                                                    <td scope="col" hidden>@item.countryID</td>
                                                    <td scope="col" hidden>@item.stateID</td>
                                                    <td scope="col" hidden>@item.districtId</td>
                                                    <td scope="col" hidden>@item.cityId</td>
                                                    <td scope="col" hidden>@item.areaId</td>
                                                    <td scope="col">@item.countryName</td>
                                                    <td scope="col">@item.stateName</td>
                                                    <td scope="col">@item.districtName</td>
                                                    <td scope="col">@item.cityName</td>
                                                    <td scope="col">@item.areaName</td>
                                                    <td scope="col">@item.Pincode</td>
                                                    <td scope="col" hidden>@item.EntryType</td>
                                                    <td scope="col" hidden><i class="fa fa-pencil-alt"></i> | <i class="fa fa-trash-alt"></i> </td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            </tbody>
                        </table>


                    </div>
                </div>

            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div> <!-- end row -->

<script src="~/Content/jquery/jquery.js"></script>
<script src="~/Content/select2/js/select2.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.all.min.js"></script>
<script src="~/Content/globalDomain.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Addtype").select2();
        $('#Addtype').change(function () {
            //alert('changes');
            HideAllData();
            var selectedItem = $(this).val();
            if (selectedItem != 0) {
                $('#separatorTable').css('display', 'block');

                if (selectedItem === "State" || selectedItem === "District" || selectedItem === "City" || selectedItem === "Area") {
                    GetData('Country', selectedItem, 0, 0, 0, 0);
                }
                selectedItem = '#divDetails' + selectedItem;
                $(selectedItem).css('display', 'block');

            }
            else {
                $('#separatorTable').css('display', 'none');
            }
            /*            alert(selectedItem)*/


            clearAll();
        });
    });

    function HideAllData() {
        $('#divDetailsCountry').css('display', 'none');
        $('#divDetailsState').css('display', 'none');
        $('#divDetailsDistrict').css('display', 'none');
        $('#divDetailsCity').css('display', 'none');
        $('#divDetailsArea').css('display', 'none');
    }

    function SaveData(type) {
        var isSaved = true;
        var geoData = {
            CountryId: 0,
            StateId: 0,
            DistrictId: 0,
            CityId: 0,
            AreaId: 0,
            Name: 0,
            PinCode: 0,
            Type: type
        }

        if (type === "Country") {
            var countryName = $('#txtcountryName').val();
            if (countryName.length > 0) {
                geoData.Name = $('#txtcountryName').val();
                isSaved = true;
            }
            else {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: type + ' Name Required, Details Not Saved...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
        }

        if (type === "State") {
            var stateName = $('#txtStateName').val();
            var countryID = $('#ddlCountryState').val();
            //console.log(countryID);
            if (countryID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select Country...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (stateName.length <= 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: type + ' Name Required, Details Not Saved...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else {
                geoData.Name = $('#txtStateName').val();
                geoData.StateId = parseInt(countryID);
                geoData.CountryId = parseInt(countryID);
                isSaved = true;
            }
        }

        if (type === "District") {

            var countryID = $('#ddlCountryDistrict').val();
            var stateID = $('#ddlCountryDistrictState').val();
            var districtName = $('#txtDistrictName').val();
            if (countryID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select Country...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (stateID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select State...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (districtName.length <= 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: type + ' Name Required, Details Not Saved...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else {
                geoData.CountryId = parseInt(countryID);
                geoData.StateId = parseInt(stateID);
                geoData.DistrictId = parseInt(stateID);
                geoData.Name = $('#txtDistrictName').val();
                geoData.PinCode = $('#txtDistrictPinCode').val();
                isSaved = true;
            }
        }
        if (type === "City") {
            var countryID = $('#ddlCountryCity').val();
            var stateID = $('#ddlCountryCityState').val();
            var districtID = $('#ddlCountryCityDistrict').val()
            var cityName = $('#txtCityName').val();


            if (countryID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select Country...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (stateID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select State...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (districtID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select District...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (cityName.length <= 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: type + ' Name Required, Details Not Saved...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else {
                geoData.CountryId = parseInt(countryID);
                geoData.StateId = parseInt(stateID);
                geoData.DistrictId = parseInt(districtID);
                geoData.CityId = parseInt(districtID);
                geoData.Name = $('#txtCityName').val();
                geoData.PinCode = $('#txtCityPincode').val();
                isSaved = true;
            }
        }
        if (type === "Area") {
            var countryID = $('#ddlCountryArea').val();
            var stateID = $('#ddlCountryAreaState').val();
            var districtID = $('#ddlCountryAreaDistrict').val()
            var cityID = $('#ddlCountryAreaCity').val()
            var areaName = $('#txtAreaName').val();

            if (countryID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select Country...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (stateID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select State...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (districtID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select District...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (cityID == 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Please Select City...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else if (areaName.length <= 0) {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: type + ' Name Required, Details Not Saved...!',
                    allowOutsideClick: false,
                    showCloseButton: true,
                });
                isSaved = false;
            }
            else {
                geoData.CountryId = parseInt($('#ddlCountryArea').val());
                geoData.StateId = parseInt($('#ddlCountryAreaState').val());
                geoData.DistrictId = ($('#ddlCountryAreaDistrict').val());
                geoData.CityId = parseInt($('#ddlCountryAreaCity').val());
                geoData.AreaId = parseInt($('#ddlCountryAreaCity').val());
                geoData.Name = $('#txtAreaName').val();
                geoData.PinCode = $('#txtPincode').val();
                isSaved = true;
            }
        }

        var d = JSON.stringify(geoData)
        console.log(d);
        if (isSaved) {
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                url: GetglobalDomain() + "/Geographical/SaveData",
                dataType: 'json',
                type: 'Post',
                cache: false,
                data: JSON.stringify(geoData),
                success: function (data) {
                    console.log(data.Type);
                    console.log(data);
                    var type = data.Type;
                    if (data.StatusCode === 1 && data.Message == " Already Exists") {
                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: type + data.Message + '...!',
                            allowOutsideClick: false,
                            showCloseButton: true
                        });
                    }
                    if (data.StatusCode === 1 && data.Message == " Inserted Successfully") {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: type + data.Message + '...!',
                            allowOutsideClick: false,
                            showCloseButton: true
                        });
                    }
                    HideAllData();
                    $('#Addtype').val(0)

                    setTimeout(function () {
                        var url = GetglobalDomain() + "/Geographical/Index";
                        window.location.href = url;
                    }, 700)


                },
                error: function (d) {
                    //alert(d);
                }
            });
        }
    }

    function GetStatesFromCountry(item, stringBindFor) {

        var cID = $(item).val();
        GetData('State', stringBindFor, cID, 0, 0, 0);


    }

    function GetDistrictFromState(item, stringBindFor) {

        var cID = $('#ddlCountry' + stringBindFor).val();
        var sID = $(item).val()
        //alert("CountryID", cID)
        //alert("StateID", sID)
        GetData('District', stringBindFor, cID, sID, 0, 0);


    }
    function GetCityFromDistrict(item, stringBindFor) {

        var cID = $('#ddlCountry' + stringBindFor).val();
        var sID = $('#ddlCountry' + stringBindFor + 'State').val();
        var dID = $(item).val();
        //alert("CountryID", cID);
        //alert("StateID", sID);
        GetData('City', stringBindFor, cID, sID, dID, 0);


    }

    function GetData(type, bindfor, countryID, StateID, DistictID, CityID) {

        var GetgeoData = {
            CountryId: parseInt(countryID),
            StateId: parseInt(StateID),
            DistrictId: parseInt(DistictID),
            CityID: parseInt(CityID),
            AreaId: 0,
            Name: 0,
            PinCode: 0,
            Type: type
        }
        $.ajax({
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            url: GetglobalDomain() + "/Geographical/GeAllData",
            dataType: 'json',
            type: 'Post',
            cache: false,
            data: JSON.stringify(GetgeoData),
            success: function (data) {
                //console.log('d');
                //console.log(data.Data);
                var idBind = 'ddlCountry' + bindfor;
                var idBindState = 'ddlCountry' + bindfor + 'State';
                var idBindDistrict = 'ddlCountry' + bindfor + 'District';
                var idBindCity = 'ddlCountry' + bindfor + 'City';
                var lst = data.Data
                if (lst.length > 0) {
                    var slst = "";
                    if (bindfor === 'State') {
                        slst = "<select class='form-control col-sm-12' id=" + idBind + "><option value='0' role=separator>Select Country</option>";
                    }

                    else if ((bindfor === 'District' && countryID !== 0) || (bindfor === 'City' && countryID !== 0) || (bindfor === 'Area' && countryID !== 0)) {
                        var bindforData = '"' + bindfor + '"';
                        if (bindfor === 'District' && countryID !== 0 && StateID === 0) {
                            slst = "<select class='form-control col-sm-12' id=" + idBindState + "><option value='0' role=separator>Select State</option>";
                        }
                        else if (bindfor === 'City' && countryID !== 0 && StateID !== 0) {
                            slst = "<select class='form-control col-sm-12' id=" + idBindDistrict + "><option value='0' role=separator>Select District</option>";

                        }
                        else if (bindfor === 'Area' && countryID !== 0 && StateID !== 0 && DistictID === 0) {
                            slst = "<select class='form-control col-sm-12' id=" + idBindDistrict + "  onchange='GetCityFromDistrict(this," + bindforData + ")'><option value='0' role=separator>Select District</option>";

                        }
                        else if (bindfor === 'Area' && countryID !== 0 && StateID !== 0 && DistictID !== 0) {
                            slst = "<select class='form-control col-sm-12' id=" + idBindCity + "><option value='0' role=separator>Select City</option>";
                        }
                        else {
                            slst = "<select class='form-control col-sm-12' id=" + idBindState + " onchange='GetDistrictFromState(this," + bindforData + ")'><option value='0' role=separator>Select State</option>";
                        }
                    }
                    else {
                        var bindforData = '"' + bindfor + '"';
                        slst = "<select class='form-control col-sm-12' id=" + idBind + " onchange='GetStatesFromCountry(this," + bindforData + ")'><option value='0' role=separator>Select Country</option>";
                    }
                    lst.forEach(function (item) {
                        slst = slst + "<option value=" + item.Id + ">" + item.Text + "</option>";
                    });
                    slst = slst + "</select>";
