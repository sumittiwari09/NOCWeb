                                    {

                                        <tr>
                                            <td>@i</td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @{
                                                    @item.varificationList
                                                }
                                            </td>

                                            <td>
                                                @item.DocumentList
